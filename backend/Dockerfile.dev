FROM php:8.2-cli

WORKDIR /var/www

# Instala dependências do sistema e extensões comuns
RUN apt-get update \
    && apt-get install -y git unzip libzip-dev zlib1g-dev libonig-dev \
    && docker-php-ext-install pdo pdo_mysql zip \
    && rm -rf /var/lib/apt/lists/*

# Instala Composer
RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer

EXPOSE 9000

# Em dev vamos montar o código com volume; o comando instala deps e serve
CMD ["sh", "-c", "composer install --no-interaction --prefer-dist || true && php artisan serve --host=0.0.0.0 --port=9000"]
